#!/bin/bash

USERID=$(id -u)

if [ $USERID -eq 0 ] 
then
    echo "You are running in root access"
     
else
    echo "ERROR:: Please run this script in root access"
    exit 1 #gives status code other than 0
fi

dnf install mysql -y

if [ $? -eq 0 ]
then 
    echo "Installing Mysql is....SUCCESS"
else
    echo "Installing Mysql is....FAILURE"
    exit 1 #gives status code other than 0
fi
